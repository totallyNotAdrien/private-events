<% if user_signed_in? %>
  <p>You are signed in, <%= current_user.name %></p>
  <%= link_to "Log out", destroy_user_session_path, data:{"turbo-method": :delete} %> <br><br>
<% else %>
  <%= link_to "Sign Up", new_user_registration_path %> <br> <br>
  <%= link_to "Log In", new_user_session_path %> <br> <br>
<% end %>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>

