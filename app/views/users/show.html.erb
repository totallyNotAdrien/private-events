<div class="title is-3"><%= current_user.name %>'s Created Events</div>

<div id="events">
  <% current_user.created_events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>
<br><br>

<div class="title is-3"><%= current_user.name %>'s Joined Events</div>

<div class="title is-5">Future Events</div>
<div>
  <% current_user.joined_events.where("date >= now()").each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>
<br>

<div class="title is-5">Past Events</div>
<div>
  <% current_user.joined_events.where("date < now()").each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>